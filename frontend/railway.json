{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile",
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "npm start",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}